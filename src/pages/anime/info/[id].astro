---
import Layout from "@layouts/Layout.astro";
import Info from "@components/Info.tsx";
import { getInfoAnime, getEpisodes } from "@lib/Anime.ts";
import { type InfoAnime } from "@type/InfoAnime";
import type { Episodios } from "@type/Episodios";

const { id } = Astro.params;

const DataInfo = (await getInfoAnime(id)) as InfoAnime;
const Episodes = (await getEpisodes(id)) as Episodios;
---

<Layout title=`${id}`>
  <Info dataAnime={DataInfo} episodes={Episodes} />
</Layout>
